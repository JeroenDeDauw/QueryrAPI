{
	"name": "queryr/web-api",
	"description": "REST API for Wikibase data",
	"homepage": "https://github.com/JeroenDeDauw/QueryrAPI",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=7.0",

		"silex/silex": "~1.3"
	},
	"require-dev": {
		"ext-pdo_sqlite": "*",

		"phpunit/phpunit": "~5.0",
		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.3",
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3",

		"symfony/browser-kit": "~2.7"
	},
	"autoload": {
		"psr-4": {
			"Queryr\\WebApi\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Queryr\\WebApi\\Tests\\": "tests/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.1.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"composer phpcs"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* app/* web/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
